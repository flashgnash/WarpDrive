<?xml version="1.0" encoding="utf-8"?>
<worldGeneration version="3"
				 xmlns="http://warpdrive.lemadec.org"
				 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				 xsi:schemaLocation="http://warpdrive.lemadec.org WarpDrive.xsd">
	
	<structure group="ship_small" name="legacy" weight="1">
		<schematic filename="legacy" weight="1" />
		<replacement blockState="minecraft:stone">
			<import group="hull_plain" />
		</replacement>
		<replacement blockState="minecraft:glass">
			<import group="hull_glass" />
		</replacement>
		<replacement blockState="minecraft:fence">
			<import group="ship_wiring" />
		</replacement>
		<replacement blockState="minecraft:sponge">
			<import group="ship_solarPanel" />
		</replacement>
		<replacement blockState="minecraft:red_wool">
			<for variable="colorWoolRed" in="white,orange,magenta,light_blue,yellow,lime,pink,light_gray">
				<filler blockState="minecraft:%colorWoolRed%_wool" weight="1" />
			</for>
		</replacement>
		<replacement blockState="minecraft:light_gray_wool">
			<for variable="colorWoolLightGray" in="gray,cyan,purple,blue,brown,green,red,black">
				<filler blockState="minecraft:%colorWoolLightGray%_wool" weight="1" />
			</for>
		</replacement>
		<replacement blockState="computercraft:computer_advanced">
			<filler blockState="computercraft:computer_advanced" weight="1" mods="computercraft" />
			<filler blockState="minecraft:air" ratio="0.5" />
		</replacement>
		<insertion blockState="opencomputers:case1" mods="opencomputers">
			<import group="ship_computerCore" name="OpenComputers" />
		</insertion>
		<insertion blockState="opencomputers:case2" mods="opencomputers">
			<import group="ship_computerCore" name="OpenComputers" />
		</insertion>
		<insertion blockState="opencomputers:diskdrive" mods="opencomputers">
			<import group="ship_computerFloppy" name="OpenComputers" />
		</insertion>
	</structure>
	
	<structure group="ship_small" name="legacy" weight="1">
		<schematic filename="legacy_corrupted" weight="1" />
		<replacement blockState="minecraft:stone">
			<import group="hull_plain" />
			<filler blockState="minecraft:air" ratio="0.1" />
			<filler blockState="warpdrive:ship_corruption" ratio="0.0025" />
		</replacement>
		<replacement blockState="minecraft:glass">
			<import group="hull_glass" />
			<filler blockState="minecraft:air" ratio="0.2" />
		</replacement>
		<replacement blockState="minecraft:fence">
			<import group="ship_wiring" />
			<filler blockState="minecraft:air" ratio="0.25" />
		</replacement>
		<replacement blockState="minecraft:sponge">
			<import group="ship_solarPanel" />
			<filler blockState="minecraft:air" ratio="0.25" />
		</replacement>
		<replacement blockState="minecraft:red_wool">
			<for variable="colorWoolRed" in="white,orange,magenta,light_blue,yellow,lime,pink,light_gray">
				<filler blockState="minecraft:%colorWoolRed%_wool" weight="1" />
			</for>
		</replacement>
		<replacement blockState="minecraft:light_gray_wool">
			<for variable="colorWoolLightGray" in="gray,cyan,purple,blue,brown,green,red,black">
				<filler blockState="minecraft:%colorWoolLightGray%_wool" weight="1" />
			</for>
		</replacement>
		<replacement blockState="warpdrive:movement.ship_core.basic">
			<filler blockState="warpdrive:movement.ship_core.basic" weight="1" />
			<filler blockState="minecraft:air" ratio="0.5" />
		</replacement>
		<replacement blockState="warpdrive:breathing.air_generator.basic">
			<filler blockState="warpdrive:breathing.air_generator.basic" weight="1" />
			<filler blockState="minecraft:air" ratio="0.5" />
		</replacement>
		<replacement blockState="computercraft:computer_advanced">
			<filler blockState="computercraft:computer_advanced" weight="1" mods="computercraft" />
			<filler blockState="minecraft:air" ratio="0.5" />
		</replacement>
	</structure>
	
</worldGeneration>